<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbgb"
    android:orientation="vertical"
    tools:context=".Main5Activity">

    <LinearLayout
        android:layout_width="383dp"
        android:layout_height="50dp">
        <TextView
            android:layout_width="383dp"
            android:layout_height="49dp"
            android:textColor="#FFFFFF"
            android:background="#FF0000"
            android:text="Login or Sign-up to Medicare App"
            android:paddingTop="5dp"
            android:textSize="25dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:ellipsize="marquee"
            android:id="@+id/marklog1"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:scrollHorizontally="true"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="383dp"
        android:layout_height="120dp">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/signimg2"
            android:layout_marginLeft="150dp"
            android:src="@drawable/doc_logo"
            android:layout_marginTop="30dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="383dp"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <!--<TextView-->
        <!--android:layout_width="90dp"-->
        <!--android:layout_height="40dp"-->
        <!--android:text="Username"-->
        <!--android:textSize="15dp"-->
        <!--android:paddingLeft="10dp"-->
        <!--android:paddingTop="8dp"-->
        <!--android:textColor="#000000"-->
        <!--android:layout_marginLeft="10dp"-->
        <!--android:layout_marginTop="20dp" />-->
        <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="58dp"
            android:textSize="15dp"
            android:paddingLeft="20dp"
            android:drawableRight="@drawable/user_name_icon"
            android:background="@drawable/custom_textview2"
            android:backgroundTint="#90FFFFFF"
            android:backgroundTintMode="src_over"
            android:hint="Username"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="383dp"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <!--<TextView-->
        <!--android:layout_width="90dp"-->
        <!--android:layout_height="40dp"-->
        <!--android:text="Password"-->
        <!--android:textSize="15dp"-->
        <!--android:paddingLeft="10dp"-->
        <!--android:paddingTop="8dp"-->
        <!--android:textColor="#000000"-->
        <!--android:layout_marginLeft="10dp"-->
        <!--android:layout_marginTop="20dp"/>-->
        <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="58dp"
            android:textSize="15dp"
            android:paddingLeft="20dp"
            android:id="@+id/pass1"
            android:hint="Password"
            android:background="@drawable/custom_textview5"
            android:drawableRight="@drawable/password_icon"
            android:backgroundTint="#90FFFFFF"
            android:backgroundTintMode="src_over"
            android:inputType="textPassword"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="383dp"
        android:layout_height="120dp"
        android:orientation="vertical">
        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="login"
            android:layout_marginLeft="58dp"
            android:background="#FF0000"
            android:textColor="#FFFFFF"
            android:id="@+id/logins1"/>
        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="Sign-up"
            android:textColor="#000000"
            android:layout_marginLeft="58dp"
            android:layout_marginTop="10dp"
            android:background="#4FFD44"
            android:backgroundTint="#60FFFFFF"
            android:backgroundTintMode="src_over"
            android:id="@+id/sign1"/>
    </LinearLayout>
</LinearLayout>